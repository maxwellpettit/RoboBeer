<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_company_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="osu.cse.robobeer.CompanyInfoActivityFragment"
    tools:showIn="@layout/activity_company_info">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <TextView
            android:text="What is RoboBeer?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/company_info_label"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            tools:text="What is RoboBeer?"
            android:padding="15dp"
            android:textColor="@android:color/white" />

        <TextView
            android:text=" - Pub staffed by robots, serving beer prepared by robots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/company_info_text1"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            tools:text=" - Pub staffed by robots, serving beer prepared by robots"
            android:padding="15dp"
            android:textColor="@android:color/white" />

        <TextView
            android:text=" - Unique, state-of-the-art robotic service so customers don’t need to worry about a robot takeover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/company_info_text2"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            tools:text=" - Unique, state-of-the-art robotic service so customers don’t need to worry about a robot takeover"
            android:padding="15dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/homer_bender"
            android:id="@+id/imageView2"
            android:cropToPadding="false"
            android:adjustViewBounds="true" />


    </LinearLayout>
    </ScrollView>
</RelativeLayout>
